<table>
<% @allproducts.each do |product| %>
<tr>
<td><a href = "/products/<%= product.id %>"><%= product.name %></a></td>
<td><%= product.price %></td>
<td><%= product.description %></td>
<td><%= product.stock %></td>
<td><img src="<%= product.image %>"></td>
</tr>
<% end %>
</table>

